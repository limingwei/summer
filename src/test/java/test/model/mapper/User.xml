<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
    <select
        id="list"
        resultType="test.model.User">
        <![CDATA[
            SELECT * FROM t_users WHERE id<#{id1} OR (id<#{id1} OR id<#{id1}) ORDER BY id DESC LIMIT 5
        ]]>
    </select>
    <insert id="user.insert">
        <![CDATA[
            INSERT INTO t_users(username) VALUES (#{username})
        ]]>
    </insert>
    <delete id="user.delete">
        <![CDATA[
            DELETE FROM t_users WHERE _id=#{_id}
        ]]>
    </delete>
    <update id="user.update">
        <![CDATA[
            UPDATE t_users SET username=#{username} WHERE _id=#{_id}
        ]]>
    </update>
</mapper>