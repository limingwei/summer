<!-- 
    改关闭端口 Server.port
    ***-web 8105
    ***-open 8205
    ***-admin 8305
-->
<Server
    port="8105"
    shutdown="SHUTDOWN">

    <Listener
        className="org.apache.catalina.core.AprLifecycleListener"
        SSLEngine="on" />
    <Listener className="org.apache.catalina.core.JasperListener" />
    <Listener className="org.apache.catalina.core.JreMemoryLeakPreventionListener" />
    <Listener className="org.apache.catalina.mbeans.GlobalResourcesLifecycleListener" />
    <Listener className="org.apache.catalina.core.ThreadLocalLeakPreventionListener" />

    <GlobalNamingResources>
        <Resource
            name="UserDatabase"
            auth="Container"
            type="org.apache.catalina.UserDatabase"
            description="User database that can be updated and saved"
            factory="org.apache.catalina.users.MemoryUserDatabaseFactory"
            pathname="conf/tomcat-users.xml" />
    </GlobalNamingResources>

<!-- 
    改名字 Service.name
    ***-web Catalina-***-web
    ***-open Catalina-***-open
    ***-admin Catalina-***-admin
    独立版 Catalina-***-web-
-->
    <Service name="Catalina-***-web">

<!-- 
    改两个端口 Connector.port Connector.redirectPort
    ***-web 8180 8543
    ***-open 8280 8643
    ***-admin 8380 8743
-->
        <Connector
            port="8180"
            protocol="HTTP/1.1"
            connectionTimeout="20000"
            redirectPort="8543"
            maxPostSize="0"
            URIEncoding="UTF-8" />

<!-- 
    改两个端口 Connector.port Connector.redirectPort
    ***-web 8109 8543
    ***-open 8209 8643
    ***-admin 8309 8743
-->
        <Connector
            port="8109"
            protocol="AJP/1.3"
            maxPostSize="0"
            redirectPort="8543" />
<!-- 
    改名字           Engine.name                        Engine.defaultHost
    ***-web      Catalina-***-web                 localhost-***-web
    ***-open    Catalina-***-open                localhost-***-open
    ***-admin  Catalina-***-admin               localhost-***-admin
-->
        <Engine
            name="Catalina-***-web"
            defaultHost="localhost-***-web">
            <Realm className="org.apache.catalina.realm.LockOutRealm">
                <Realm
                    className="org.apache.catalina.realm.UserDatabaseRealm"
                    resourceName="UserDatabase" />
            </Realm>

<!-- 
    改名字           Host.name
    ***-web                 localhost-***-web
    ***-open              localhost-***-open
    ***-admin        localhost-***-admin
-->
            <Host
                name="localhost-***-web"
                appBase="webapps"
                unpackWARs="true"
                autoDeploy="true">
                <Valve
                    className="org.apache.catalina.valves.AccessLogValve"
                    directory="logs"
                    prefix="localhost_access_log."
                    suffix=".txt"
                    pattern="%h %l %u %t &quot;%r&quot; %s %b" />
<!-- 
    改项目路径           Context.docBase
    ***-web            /home/***/www/***-web
    ***-open           /home/***/www/***-open
    ***-admin       /home/***/www/***-admin
-->
                <Context
                    docBase="/home/***/www/***-web"
                    path=""
                    privileged="true"
                    reloadable="true"
                    caseSensitive="false"
                    debug="0"
                    crossContext="true" />
            </Host>
        </Engine>
    </Service>
</Server>